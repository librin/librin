<h1>Resultados de la b√∫squeda</h1>

<table>
	<tr>
		<th>TITULO</th><th>AUTOR</th><th>TAGS</th><th>DESCARGAR</th>
	</tr>
		<% 
		for resource in @resources do
			tagString = ""
			for tag in resource.tags do
				tagString += "#{tag.name} "
			end
		%>
	<tr>
		<td><%= resource.title%></td>
		<td><%= resource.author%></td>
		<td><%= tagString%></td>
		<% for document in resource.documents%>
		<td><%= link_to "Descargar", document.file.url(:original, false)%></td>
		<%end%>
	</tr>
	<%end%>
</table>
