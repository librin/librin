<h5>Hola <%= @currentUser.email %></h5>

<h3>Descarga tu libro</h3>

<div class="fichero">
	
	<div class = "portada"><%= image_tag @resource.cover.url(:medium)%></div>
	<h3><%= @resource.title %></h3>
	<div class = "autor">AUTOR: <%= @resource.author %></div>
	<div class = "desc">DESCRIPCIÓN: <%= @resource.description %></div>
	<div class = "tags">TAGS: <% @resource.tags.each{|tag| %>
			<a href=/resource/search?search=<%=tag.name%>> <%=tag.name%></a>
			<%}%>
	</div>
	<div class = "user">Compartido, amablemente por... <%= @resource.user.userName %></div>

	<% for document in @resource.documents%>
			<a href="/resource/download?id=<%=document.id%>">DESCARGAR</a>
	<%end%>
	<a href="/resource/delete?id=<%= @resource.id%>">BORRAR</a>
	<a href="/resource/show_update?id=<%= @resource.id%>">EDITA</a>
	
</div>	

<div class = "suggest">
		<h4>Recomienda este recurso</h4>
		<%= form_tag({controller:"librin_mail", action:"suggestion"}, method:"get") do%>
			<%= label_tag(:userName, "Nombre Usuario")%>
			<%= text_field_tag(:userName)%><br>
			<%= hidden_field_tag(:id, @resource.id)%>
			<%= submit_tag "Enviar"%><br>
		<%end%>
</div>


<div class ="voting">

<div class = "votes">Valoración media: <%= @resource.get_votes %></div>
	<% if @canVote==true %>
	  <%= form_tag({controller:"vote",action:"create"},method:"get") do%>
	    <fieldset class="rating">
	      <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="Rocks!"></label>
	      <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="Pretty good"></label>
	      <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="Meh"></label>
	      <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="Kinda bad"></label>
	      <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="Sucks big time"></label>
	    </fieldset>
	  <%= hidden_field_tag(:id,@resource.id)%>
	  <%= submit_tag("Vota!")%>
	  <% end %>
	<%else%>
<h6>Ya has votado este recurso</h6>
<%end%>

</div>

</div>
<div class ="comment">
	<% for comment in @resource.comments %>
		<div><%=comment.comment%></div>
		<div>Comentado por <%= comment.user.email%> </div>
		<div class ="avatarComentario"><%= image_tag(comment.user.avatar)%></div>
	<%end%>

	<h4>Añade un comentario</h4>
	    <p><%= form_tag({controller:"comment",action:"create"},method:"get") do%>
		<%= hidden_field_tag(:id,@resource.id)%>
			<%= label_tag(:comment, "Comentario:")%></p>
			<p><%= text_area_tag(:comment)%></p>
		<p><%= submit_tag("Comenta!")%></p>
	<% end %>
</div>